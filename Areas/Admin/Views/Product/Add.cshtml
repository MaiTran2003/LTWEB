@model DoAn_LTWeb.Models.Product
@{
    ViewBag.Title = "Create Product";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Add", "Product", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-2"></div>
        <div class="col-md-6">
            @Html.LabelFor(model => model.Name, "Tên sản phẩm")
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @clas = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-md-6">
            @Html.LabelFor(model => model.Description, "Mô tả sản phẩm")
            @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Description, "", new { @clas = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-md-6">
            @Html.LabelFor(model => model.Price, "Giá sản phẩm")
            @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Price, "", new { @clas = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-md-6">
            @Html.LabelFor(model => model.Brand_Id, "Thương Hiệu")
            @Html.DropDownListFor(model => model.Brand_Id, new SelectList(ViewBag.Brands, "Id", "Name"), "Hãy chon thương hiệu...", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Brand_Id, "", new { @clas = "text-danger" })

        </div>
    </div>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-md-6">
            @Html.LabelFor(model => model.Image, "Chọn hình")
            <input type="file" name="imageFile" id="imageFile" class="form-control" />
            @Html.ValidationMessageFor(model => model.Image, "", new { @clas = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="/admin/product" class="btn btn-danger">Cancel</a>
        </div>
    </div>
}

