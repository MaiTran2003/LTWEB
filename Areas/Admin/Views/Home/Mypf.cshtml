@model DoAn_LTWeb.Models.User
@{
    ViewBag.Title = "MyProfile";
}

<h1>@ViewBag.Title</h1>
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>UserName</th>
                <th>EmailAddress</th>
                <th>Role</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>
                    <span class=" badge-success rounded-pill d-inline">@Model.UserName</span>
                </td>
                <td>
                <td>
                    <span class=" badge-success rounded-pill d-inline"> @Model.EmailAddress</span>
                </td>
                <td>
                    <span class=" badge-success rounded-pill d-inline">@Model.Role</span>
                </td>
            </tr>
        </tbody>
    </table>
    <a href="@Url.Action("Index", "Home")">Go Back</a>