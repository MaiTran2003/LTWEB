@model List<DoAn_LTWeb.Models.User>
@{
    ViewBag.Title = "User";
}
<a href="/admin/User/Create" type="button" class="text-decoration-none btn btn-link btn-sm btn-rounded">Create Usser</a>
<a href="/admin/User/CreateAdmin" type="button" class="text-decoration-none btn btn-link btn-sm btn-rounded">Create Admin</a>
<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
        <tr>
            <th>UserID</th>
            <th>UserName</th>
            <th>Role</th>
            <th>Chức năng</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p class="fw-normal mb-1">@item.UserId</p>
                </td>
                <td>
                    <span class=" badge-success rounded-pill d-inline">@item.UserName</span>
                </td>
                <td>
                    <span class=" badge-success">@item.Role</span>
                </td>
                <td>
                    <a href="/admin/User/Update/@item.UserId" type="button" class="text-decoration-none btn btn-link btn-sm btn-rounded">Update</a>
                    |
                    <a href="/admin/User/Delete/@item.UserId" type="button" class="text-decoration-none btn btn-link btn-sm btn-rounded">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
